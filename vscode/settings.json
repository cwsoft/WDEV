{
  // Telemetry settings
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // Windows settings
  "window.zoomLevel": 0,

  // Workbench settings
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.editor": "json",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#333"
  },
  
  // Editor settings
  "editor.rulers": [110],
  "editor.tokenColorCustomizations": {
    "[Visual Studio Dark]": {
      "textMateRules": [
        {
          "scope": "string.quoted.docstring.multi.python",
          "settings": {
            "foreground": "#6a9955",
          }
        }
      ]
    }
  },
  
  // Integrated Terminal (Cmder support)
  "terminal.external.windowsExec": "C:\\Dev\\05_Tools\\cmder\\cmder.exe",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  // "terminal.integrated.shellArgs.windows": [
  //   "/k",
  //   "C:\\Dev\\05_Tools\\cmder\\vendor\\init.bat"
  // ],

  // PHP settings
  "php.validate.executablePath": "C:\\Dev\\01_XAMPP\\php7.4.2\\php\\php.exe",
  "php.validate.enable": false,
  "php.suggest.basic": false,

  // Python settings
  "python.pythonPath": "C:\\Dev\\05_Tools\\Miniconda3\\python.exe",
  "python.globalModuleInstallation": false,
  "python.jediEnabled": false,
  
  // Pyhton Linting
  "python.linting.pylintPath": "pylint",
  "python.linting.pylintArgs": [
    "--max-line-length=110",
    "--disable=C0103"
  ],
  
  // Python Formatters
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "110"
  ],
  
  // Code Runners for Python and PHP
  "code-runner.clearPreviousOutput": true,
  "code-runner.showExecutionMessage": false,
  "code-runner.executorMap": {
    "python": "$pythonPath -u $fullFileName",
    "php": "C:\\Dev\\01_XAMPP\\php7.4.2\\php\\php.exe -f $fullFileName"
  },
}